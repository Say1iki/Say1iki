def asal_mi(sayi):
    if sayi == 1:
        return False
    elif sayi == 2:
        return True
    else:
        for i in range(2, sayi):
            if sayi % i == 0:
                return False
        return True  # for döngüsünden çıkıldığında True döndürülmeli

while True:
    sayi = input("Bir sayı girin (Çıkmak için * tuşlayın): ")
    
    # Eğer kullanıcı * girerse döngüyü kır
    if sayi == "*":
        break

    # Girilen değerin sayı olup olmadığını kontrol et
    try:
        sayi = int(sayi)
    except ValueError:
        print("Lütfen geçerli bir sayı girin!")
        continue

    # Asal sayı kontrolü
    if asal_mi(sayi):
        print(sayi, "asal bir sayıdır.")
    else:
        print(sayi, "asal bir sayı değildir.")
